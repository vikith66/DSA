#include<iostream>
using namespace std;

class binary {
    private:
        int n, arr[50];
    public:
        binary(int num) {
            n = num;
        }
        void input() {
            cout << "Enter the elements in sorted order:" << endl;
            for (int i = 0; i < n; i++)
                cin >> arr[i];
        }
        void display() {
            for (int i = 0; i < n; i++) {
                cout << arr[i] << " ";
            }
            cout << endl;
        }
        int search(int key) {
            int low = 0, high = n - 1, mid;
            while (low <= high) {
                mid = (low + high) / 2;
                if (arr[mid] == key)
                    return mid; 
                else if (arr[mid] < key)
                    low = mid + 1;
                else
                    high = mid - 1;
            }
            return -1;
        }
};

int main() {
    int n, key, choice, result;
    cout << "Enter the number of elements: ";
    cin >> n;
    binary b(n);
    b.input();
    
    do {
        cout << "\n1. Display Elements\n2. Search Element\n3. Exit\nEnter your choice: " << endl;

        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Array elements: ";
                b.display();
                break;
            case 2:
                cout << "Enter the element to search: ";
                cin >> key;
                result = b.search(key);
                if (result != -1)
                    cout << "Element found at index: " << result << endl;
                else
                    cout << "Element not found!" << endl;
                break;
            case 3:
                cout << "Exiting program..." << endl;
                break;
            default:
                cout << "Invalid choice! Please try again." << endl;
        }
    } while (choice != 3);

    return 0;
}
