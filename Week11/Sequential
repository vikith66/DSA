#include<iostream>
using namespace std;

class sequential {
    private:
        int n, arr[50];
    public:
        sequential(int num) {
            n = num;
        }
        void input() {
            cout << "Enter the elements:" << endl;
            for (int i = 0; i < n; i++)
                cin >> arr[i];
        }
        void display() {
            for (int i = 0; i < n; i++) {
                cout << arr[i] << " ";
            }
            cout << endl;
        }
        int search(int key) {
            int i = 0;
            while (i < n) {
                if (arr[i] == key)
                    return i; 
                i++;
            }
            return -1; 
        }
};

int main() {
    int n, key, choice, result;
    cout << "Enter the number of elements: ";
    cin >> n;
    sequential s(n);
    s.input();
    
    do {
        cout << "\n1. Display Elements\n2. Search Element\n3. Exit\nEnter your choice: " << endl;
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Array elements: ";
                s.display();
                break;
            case 2:
                cout << "Enter the element to search: ";
                cin >> key;
                result = s.search(key);
                if (result != -1)
                    cout << "Element found at index: " << result << endl;
                else
                    cout << "Element not found!" << endl;
                break;
            case 3:
                cout << "Exiting program..." << endl;
                break;
            default:
                cout << "Invalid choice! Please try again." << endl;
        }
    } while (choice != 3);

    return 0;
}
