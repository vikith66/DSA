#include <iostream>
using namespace std;
int main() {
int rows,cols;
cout<<"Enter number of rows (for lower triangular matrix, rows = cols): ";
cin>>rows;
cols=rows;
int matrix[10][10]={0}; 
cout<<"Enter the elements of the lower triangular matrix:"<<endl;
for(int i=0;i<rows;i++) {
for(int j=0;j<cols;j++) {
if(i>=j) {
cin>>matrix[i][j];
} else {
matrix[i][j]=0; 
}
}
}
cout<<"Lower Triangular Matrix:"<<endl;
for(int i=0;i<rows;i++) {
for(int j=0;j<cols;j++) {
cout<<matrix[i][j]<<" ";
}
cout<<endl;
}
int rowMajor[100]; 
int index=0;
for(int i=0;i<rows;i++) {
for(int j=0;j<cols;j++) {
if(i>=j){ 
rowMajor[index++]=matrix[i][j];
}
}
}
cout<<"Row-Major Representation:"<<endl;
for(int i=0;i<index;i++) {
cout<<rowMajor[i]<<" ";
}
cout<<endl;
int r,c;
cout<<"Enter row and column to retrieve value: ";
cin>>r>>c;
if(r>=0&&r<rows&&c>=0&&c<=r) { 
int posInRowMajor=(r*(r+1))/2+c; 
cout<<"Value at ("<<r<<","<<c<<") is: "<<rowMajor[posInRowMajor]<<endl;
} else {
cout<<"Invalid location!"<<endl;
}
return 0;
}
