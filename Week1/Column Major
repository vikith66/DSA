#include<iostream>
using namespace std;
int main(){
    int m,n,i,j,k=0;
    cout<<"Enter the order of matrix (row and column):";
    cin>>m>>n;
    int mat[m][n],no_of_elements;
    no_of_elements=m*n;
    int arr[no_of_elements];
    cout<<"Enter the elements of matrix:\n";
    for(i=0;i<m;i++){
        for(j=0;j<n;j++){
                cin>>mat[i][j];
        }
    }
    cout<<"The elements of matrix is:\n";
    for(i=0;i<m;i++){
        for(j=0;j<n;j++){
            cout<<mat[i][j]<<"\t";
        }
        cout<<"\n";
    }
    cout<<"\n";
    for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            arr[k]=mat[j][i];
            k++;
        }
    }

    cout<<"2D to 1D is:\n";
    for(i=0;i<no_of_elements;i++){
        cout<<arr[i]<<"\t";
    }
    cout<<"\n";

    cout<<"Enter the row and column values to search:\n";
    int row,col;
    cin>>row>>col;
    if(row<m && col<n){
        int search_index=(col*n)+row;
        cout<<"The seacrh element is:";
        cout<<arr[search_index]<<endl;
    }
    else{
        cout<<"Enter a valid value!!";
    }

    return 0;
}
