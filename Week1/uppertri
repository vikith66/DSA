#include<iostream>
using namespace std;
int main(){
    int n,i,j,k=0;
    cout<<"Enter the order of square matrix:";
    cin>>n;
    int mat[n][n],no_of_elements;
    no_of_elements=n*n;
    int arr[no_of_elements];
    cout<<"Enter the elements of upper triangular matrix:\n";
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            if(i<=j){
                cin>>mat[i][j];
            }
            else{
                mat[i][j]=0;
            }
        }
    }
    cout<<"The elements of upper triangular matrix is:\n";
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            cout<<mat[i][j]<<"\t";
        }
        cout<<"\n";
    }
    cout<<"\n";
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            if (i <= j) {
                arr[k] = mat[i][j];
                k++;
            }
        }
    }
    cout<<"2D to 1D is:";
    for(i=0;i<k;i++){
        cout<<arr[i]<<"\t";
    }
    cout<<"\n";
    cout<<"Enter row and column value of an element to search: \n";
    int row,col,search_index;
    cin>>row>>col;
    if(row<=col){
    search_index=((n*row)+col-(row*(row+1)/2));
    cout<<"Search element is:"<<arr[search_index]<<endl;
    }
    else{
        cout<<"Enter valid values!!";
    }

    return 0;
}
